{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "declaration": true,
    "rootDir": "src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
     "node_modules"
   ],
  "include": [
    "src/*"
  ]
}
